<script>
    var channelName = 'kudvenkat';
    var vidHeight = 400;
    var vidWidth = 500;
    var vidMaxResult = 20; // Maximum can be 50

    $(document).ready(function () {
        $.get("https://www.googleapis.com/youtube/v3/playlistItems", {
            part: 'contentDetails',
            forUsername: channelName,
            key: '  ' //Browser API Key
        },
            function (data) {
